<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\ContactMessage\Domain\Model\Message" table="contact_us_messages" repository-class="App\ContactMessage\Infrastructure\Doctrine\MessageRepository">
        <id name="id" type="integer" column="id_message">
            <generator strategy="AUTO" />
        </id>
        <field name="name" type="string" column="name" length="255" />
        <field name="email" type="string" column="email" length="255" />
        <field name="subject" type="string" column="subject" length="255" />
        <field name="body" type="text" column="body" />
        <field name="addressIp" type="string" column="address_ip" length="255" />
        <field name="status" type="smallint" column="status" />
        <field name="created" type="datetime_immutable" column="created" />
        <field name="spam" type="boolean" column="spam" />
    </entity>

</doctrine-mapping>
