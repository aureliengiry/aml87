{% extends "AmlWebBundle::layout.html.twig" %}

{% block title -%}
	Connexion - 
{%- endblock title %}

{% block body %}
<div id="col-left" class="two-cols-content">

	<div class="contenu-page">
		<h1>Connexion</h1>
		{% if error %}
			<div class="alert alert-error">{{ error.message|trans([], 'validators') }}</div>
		{% endif %}
	
		<form action="{{ path('login_check') }}" method="post">
		    <label for="login">Login :</label>
		    <input type="text" id="login" name="_username" value="{{ last_username }}" />
		
		    <label for="password">Mot de passe :</label>
		    <input type="password" id="password" name="_password" /><br />
		    
		    <p>
			    <input type="checkbox" id="remember_me" name="_remember_me" />
		   	 	<label for="remember_me" style="display:inline-block;">Se souvenir de moi</label><br />
						<em>
					Cette option vous permet d'éviter de ressaisir votre mot de passe à chaque accès au site. Attention à ne pas utiliser cette fonction si vous êtes connecté à un ordinateur partagé.
				</em>
			</p>
	
			
		    {#
	        If you want to control the URL the user is redirected to on success (more details below)
	        <input type="hidden" name="_target_path" value="/account" />
	    #}
			
	        <input type="submit" class="btn btn-primary" value="Connexion">
		</form>
	
		<p>
			<a href="" title="Mot de passe oublié ?">Mot de passe oublié ?</a>			
		</p>
		
		</div>
</div>
<div id="col-right">

</div>
{%- endblock body %}