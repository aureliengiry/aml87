{% extends "AmlWebBundle::Admin/layout.html.twig" %}

{% block title -%}

    Partenaires - Gestion des partenaires

{%- endblock title %}

{% block body %}

<div class="row-fluid">

    <div class="span12">

        <div class="form-actions">
            <a class="btn btn-default" href="{{ path('admin_partenaire_new') }}">
                <i class="icon-plus"></i> Ajouter un partenaire
            </a>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Logo</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><img src="{{ asset('uploads/images/' ~ entity.logo.path ) }}" title="{{ entity.logo.title }}"></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.description }}</td>
                    <td>
                        <a class="btn btn-default" href="{{ path('admin_partenaire_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i> Modifier</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>




    </div>
</div>
{% endblock body %}