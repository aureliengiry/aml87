{% extends "AmlWebBundle::Admin/layout.html.twig" %}

{% block title -%}

    Liens

{%- endblock title %}

{% block body %}
<div class="row-fluid">

	<div class="span12">

        <div class="form-actions">
            <a class="btn btn-default" href="{{ path('content_link_new') }}">
                <i class="icon-plus"></i> Ajouter un lien
            </a>
        </div>

		<table class="table table-bordered table-striped">
		    <thead>
		        <tr>
		            <th>Titre</th>
		            <th>URL</th>
		            <th>Status</th>
		            <th>Actions</th>
		        </tr>
		    </thead>
		    <tbody>
            {% if entities is not empty  %}
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.description }}</td>
                        <td>{{ entity.url }}</td>
                        <td>{{ entity.public|publicStatus }}</td>
                        <td>
                            <ul class="nav">
                                <li>
                                    <a class="btn btn-default" href="{{ path('content_link_edit', { 'id': entity.id }) }}" title="Modifier le lien">
                                        <i class="icon-pencil"></i> Modifier
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <td colspan="4">Aucune lien enregistr√©</td>
            {% endif %}
		    </tbody>
		</table>

	</div>
</div>
{% endblock body %}