{% extends "AmlWebBundle::Admin/layout.html.twig" %}

{% block title -%}
    Discrographie - Album "{{ edit_form.title }}"
{%- endblock title %}

{% block body %}
<div class="row-fluid">

	<div class="span12">

		<form action="{{ path('content_album_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
		
			{{ form_row(edit_form.title) }}
		
			<div id="album_date_container" class="input-append date" data-date="{{ "now"|date("d/m/Y") }}">
						
				{{ form_label(edit_form.date) }}
				{{ form_widget(edit_form.date) }}<span class="add-on"><i class="icon-th"></i></span>
				
				{{ form_errors(edit_form.date) }}
			</div>
			
			{{ form_row(edit_form.description) }}
			
			{{ form_row(edit_form.public) }}	
		    {{ form_widget(edit_form) }}
		    <div class="form-actions">
		        <button class="btn btn-primary" type="submit">Enregistrer</button>
		    </div>
		</form>

		<ul class="record_actions">
		    <li>
		        <a href="{{ path('content_album') }}">
		            Back to the list
		        </a>
		    </li>
		    <li>
		        <form action="{{ path('content_album_delete', { 'id': entity.id }) }}" method="post">
		            {{ form_widget(delete_form) }}
		            <button type="submit">Delete</button>
		        </form>
		    </li>
		</ul>
	</div>
</div>

{# CONFIG CKEDITOR #}
{% include "AmlWebBundle::Admin/Partial/ckeditor.html.twig" with {'target': 'aml_bundle_WebBundle_albumtype_description'}  %} 


{% endblock body %}

{% block endJS %}
	<script type="text/javascript">

$('#album_date_container').datepicker({
				format: 'dd/mm/yyyy',
		});

</script>
{% endblock endJS %}

