          		<li{% if app.request.attributes.get('_route') == 'content_album' %} class="active"{% endif %}>
          			<a href="{{ path('content_album') }}">Discrographie</a>
          		</li>
          		
          		<li{% if app.request.attributes.get('_route') == 'content_link' %} class="active"{% endif %}>
          			<a href="{{ path('content_link') }}">Liens</a>
          		</li>          		
          		
          	</ul>
          	
          </li>
          <li{% if app.request.attributes.get('_route') == 'admin_agenda' %} class="active"{% endif %}>
          	<a href="{{ path('admin_agenda', {mode:'calendar'}) }}" title="Gestion des évènements">Agenda</a>
          </li>
          <li{% if app.request.attributes.get('_route') == 'admin_medias' %} class="active"{% endif %}>
          	<a href="{{ path('admin_medias') }}" title="Gestion des médias">Médias</a>
          </li>
          <li{% if app.request.attributes.get('_route') == 'admin_user' %} class="active"{% endif %}>
