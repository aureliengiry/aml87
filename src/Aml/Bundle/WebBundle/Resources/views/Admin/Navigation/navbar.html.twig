        </ul>
        
        <ul class="nav pull-right">
          <li><a href="{{ path('fos_user_security_logout') }}"><i class="icon-ban-circle icon-white"></i> {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
        </ul>
