{% extends "AmlWebBundle::Admin/layout.html.twig" %}

{% block title -%}

    File edit

{%- endblock title %}

{% block body %}
<div class="row-fluid">

	<div class="span12">

		<form action="{{ path('admin_file_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
		    {{ form_widget(edit_form) }}
		    <p>
		        <button type="submit">Edit</button>
		    </p>
		</form>
		
		<ul class="record_actions">
		    <li>
		        <a href="{{ path('admin_medias') }}">
		            Back to the list
		        </a>
		    </li>
		    <li>
		        <form action="{{ path('admin_file_delete', { 'id': entity.id }) }}" method="post">
		            {{ form_widget(delete_form) }}
		            <button type="submit">Delete</button>
		        </form>
		    </li>
		</ul>
	</div>
</div>

	
{% endblock body %}