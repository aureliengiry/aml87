{% extends "AmlWebBundle::Admin/layout.html.twig" %}

{% block title -%}

    Blog - Cr√©er un nouvel article de blog

{%- endblock title %}

{% block body %}
<div class="row-fluid">
	<div class="span3">
		{# Barre de navigation left #}
	  	{% include "AmlWebBundle::Admin/Navigation/content_subnav.html.twig" %}  
	</div>		


	<div class="span5">
	
		<h1>File edit</h1>
		
		<form action="{{ path('admin_file_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
		    {{ form_widget(edit_form) }}
		    <p>
		        <button type="submit">Edit</button>
		    </p>
		</form>
		
		<ul class="record_actions">
		    <li>
		        <a href="{{ path('admin_medias') }}">
		            Back to the list
		        </a>
		    </li>
		    <li>
		        <form action="{{ path('admin_file_delete', { 'id': entity.id }) }}" method="post">
		            {{ form_widget(delete_form) }}
		            <button type="submit">Delete</button>
		        </form>
		    </li>
		</ul>
	</div>
</div>

	
{% endblock body %}