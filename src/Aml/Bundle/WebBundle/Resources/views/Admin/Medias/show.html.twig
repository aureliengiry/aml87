{% extends "AmlWebBundle::Admin/layout.html.twig" %}

{% block title -%}

    Blog - Cr√©er un nouvel article de blog

{%- endblock title %}

{% block body %}
<div class="row-fluid">
	<div class="span3">
		{# Barre de navigation left #}
	  	{% include "AmlWebBundle::Admin/Navigation/content_subnav.html.twig" %}  
	</div>		


	<div class="span5">
	
		<h1>File</h1>
		
		<table class="record_properties">
		    <tbody>
		        <tr>
		            <th>Id</th>
		            <td>{{ entity.id }}</td>
		        </tr>
		        <tr>
		            <th>Title</th>
		            <td>{{ entity.title }}</td>
		        </tr>
		        <tr>
		            <th>Filename</th>
		            <td>{{ entity.file }}</td>
		        </tr>
		        <tr>
		            <th>Type</th>
		            <td>{{ entity.type }}</td>
		        </tr>
		    </tbody>
		</table>
		
		<ul class="record_actions">
		    <li>
		        <a href="{{ path('admin_medias') }}">
		            Back to the list
		        </a>
		    </li>
		    <li>
		        <a href="{{ path('admin_file_edit', { 'id': entity.id }) }}">
		            Edit
		        </a>
		    </li>
		    <li>
		        <form action="{{ path('admin_file_delete', { 'id': entity.id }) }}" method="post">
		            {{ form_widget(delete_form) }}
		            <button type="submit">Delete</button>
		        </form>
		    </li>
		</ul>
	</div>
</div>

	
{% endblock body %}
		