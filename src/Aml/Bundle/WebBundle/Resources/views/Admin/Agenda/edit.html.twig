{% extends "AmlWebBundle::Admin/layout.html.twig" %}

{% block title -%}
    Editer l'évènement "{{ entity.title }}"
{%- endblock title %}

{% block body %}
<div class="row-fluid">
	<div class="span3">
	</div>		

	<div class="span5">
<h1>Editer l'évènement "{{ entity.title }}"</h1>

<form action="{{ path('admin_agenda_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
     <div class="form-actions">
	   	<a href="{{ path('admin_agenda') }}" class="btn btn-link" title="Retourner à la liste des évènements">
	       	<i class="icon-arrow-left"></i>
	           retour à la liste des évènements
	    </a>
	       
	    <button class="btn btn-primary pull-right" type="submit">Enregistrer</button>
	  </div>
</form>

<ul class="record_actions">
 
    <li>
        <form action="{{ path('admin_agenda_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock body %}
