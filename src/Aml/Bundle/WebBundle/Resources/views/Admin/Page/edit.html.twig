{% extends "AmlWebBundle::Admin/layout.html.twig" %}

{% block title -%}Blog - Cr√©er un nouvel article de blog{%- endblock title %}

{% block body %}

<div class="row-fluid">

	<div class="span5">
		<h1>Page edit</h1>

		<form action="{{ path('content_pages_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
		    {{ form_widget(edit_form) }}
		    <p>
		        <button type="submit">Edit</button>
		    </p>
		</form>
		
		<ul class="record_actions">
		    <li>
		        <a href="{{ path('content_pages') }}">
		            Back to the list
		        </a>
		    </li>
		    <li>
		        <form action="{{ path('content_pages_delete', { 'id': entity.id }) }}" method="post">
		            {{ form_widget(delete_form) }}
		            <button type="submit">Delete</button>
		        </form>
		    </li>
		</ul>
	</div>
</div>
	{# CONFIG CKEDITOR #}
  	{% include "AmlWebBundle::Admin/Partial/ckeditor.html.twig" with {'target': 'aml_bundle_WebBundle_pagetype_body'}  %} 

{% endblock body %}
