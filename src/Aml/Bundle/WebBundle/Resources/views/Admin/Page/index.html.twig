{% extends "AmlWebBundle::Admin/layout.html.twig" %}

{% block title -%}

    Page - Liste des pages

{%- endblock title %}

{% block body %}
<div class="row-fluid">
	<div class="span3">
		{# Barre de navigation left #}
	  	{% include "AmlWebBundle::Admin/Navigation/content_subnav.html.twig" %}  
	</div>		


	<div class="span5">
		<h1>Page list</h1>

		<table class="table table-bordered table-striped">
		    <thead>
		        <tr>
		            <th>Title</th>
		            <th>Created</th>
		            <th>Updated</th>
		            <th>Public</th>
		            <th>Url</th>
		            <th>Actions</th>
		        </tr>
		    </thead>
		    <tbody>
		    {% for entity in entities %}
		        <tr>		            
		            <td>{{ entity.title }}</td>
		            <td>{{ entity.body }}</td>
		            <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif%}</td>
		            <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif%}</td>
		            <td>{{ entity.public }}</td>
		            <td>{{ entity.url }}</td>
		            <td>
		                <ul>
		                    <li>
		                        <a href="{{ path('admin_content_pages_show', { 'id': entity.id }) }}">show</a>
		                    </li>
		                    <li>
		                        <a href="{{ path('admin_content_pages_edit', { 'id': entity.id }) }}">edit</a>
		                    </li>
		                </ul>
		            </td>
		        </tr>
		    {% endfor %}
		    </tbody>
		</table>
		
		<ul>
		    <li>
		        <a href="{{ path('admin_content_pages_new') }}">
		            Create a new entry
		        </a>
		    </li>
		</ul>
	</div>
</div>
{% endblock body %}