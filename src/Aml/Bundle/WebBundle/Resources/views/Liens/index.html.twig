{% extends "AmlWebBundle::layout.html.twig" %}

{% block title -%}
	Liens -
{%- endblock title %}

{% block body %}
<div id="col-left" class="two-cols-content">

	<div class="contenu-page">
		<h1>Liens</h1>
		
		<ul id="list-links">
		    {% for entity in entities %}
		        <li>
                    <strong>{{ entity.title }} : </strong><a href="http://{{ entity.url }}" target="_blank" title="{{ entity.title }}">{{ entity.url }}</a>
                    <br/><span>{{ entity.description }}</span>
                </li>
		    {% endfor %}		 
		 </ul>
	
		
		</div>
</div>
<div id="col-right">

</div>
{%- endblock body %}

