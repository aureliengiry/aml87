{% extends "AmlWebBundle::Admin/layout.html.twig" %}

{% form_theme form 'AmlWebBundle:Form:aml_theme.html.twig' %}

{% block title -%}Blog - Créer un nouvel article de blog{%- endblock title %}

{% block body %}
<div class="row-fluid">


	<div class="span12">

		<form class="form-horizontal" id="blog-add-content" action="{{ path('admin_content_blog_create') }}" method="post" {{ form_enctype(form) }}>
		    {{ form_row(form.title) }}
		    {{ form_row(form.body) }}
		    {{ form_row(form.category) }}

            <div class="control-group">
                <label class="control-label" for="tumblr_addtags">{{ form_label(form.addtags)  }}</label>
                <div class="controls manage-tags-container">
                    <div class="input-append manage-tags">
                        {{ form_widget(form.addtags)  }}<button id="blog-button-add-tag" class="btn" type="button"><i class="icon-plus"></i></button>
                    </div>
                    {% set tagDataPrototype = '<span>__name__</span><button class="close" >&times;</button><input type="hidden" name="aml_bundle_BlogBundle_blogtype[tags][]" value="__id__" />' %}
                    <div id="blog_tags" class="tags pull-right manage-tags" data-prototype="{{ tagDataPrototype }}">

                    </div>

                </div>
            </div>

            {{ form_row(form.public) }}

            {{form_row(form._token)}}
            <div class="form-actions">
                <a class="btn btn-link" href="{{ path('admin_content_blog') }}">
                    <i class="icon-arrow-left"></i> Retour à la liste des articles
                </a>

                <button class="btn btn-primary pull-right" type="submit">Enregistrer</button>
            </div>
		</form>

	</div>
</div>

	{# CONFIG CKEDITOR #}
  	{% include "AmlWebBundle::Admin/Partial/ckeditor.html.twig" with {'target': 'aml_bundle_BlogBundle_blogtype_body'}  %}

{% endblock body %}

{% block javascripts %}
    {{ form_javascript(form) }}

    <script src="{{ asset('bundles/amlblog/js/manageTags.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        tags.urlLoadTag = '{{ url('blog_tags_load_item') }}';

        tags.init = function(){
            this.form = $('#blog-add-content');
            this.containerSelectedTags = $('#container-selected-tags');

            // Get the div that holds the collection of tags
            this.collectionHolder = $('#blog_tags');

            // count the current form inputs we have (e.g. 2), use that as the new
            // index when inserting a new item (e.g. 2)
            this.collectionHolder.data('index', this.collectionHolder.find(':input').length);
            this.tags = new Array();

            this.addTagButton = $('#blog-button-add-tag');
            this.autocompleteField = $('#autocompleter_aml_bundle_BlogBundle_blogtype_addtags');
            this.removeTagButton = this.collectionHolder.find('button.close');

            this.observeAddTag();
            this.observeRemoveTag();
        };

        tags.init();
    </script>
{% endblock javascripts %}

{% block stylesheets %}
    {{ form_stylesheet(form) }}
{% endblock %}