{% extends base_template %}

{% block title %}{{ 'title_dashboard'|trans({}, 'SonataAdminBundle') }}{% endblock%}
{% block breadcrumb %}{% endblock %}
{% block content %}

    {{ sonata_block_render_event('sonata.admin.dashboard.top', { 'admin_pool': admin_pool }) }}

    <div class="row-fluid">
        {% set has_center = false %}
        {% for blockList in blocks %}
            {% if blockList is not empty %}
                {% for block in blockList %}
                    {% if block.position is defined and block.position == 'center' %}
                        {% set has_center = true %}
                    {% endif %}
                {% endfor %}
            {% endif %}
        {% endfor %}

        <div class="{% if has_center %}span3{% else %}span6{% endif %}">
            {% for blockList in blocks %}
                {% if blockList is not empty %}
                    {% for block in blockList %}
                        {% if block.position is defined and block.position == 'left' %}
                            {{ sonata_block_render({ 'type': block.type, 'settings': block.settings}) }}
                        {% endif %}
                    {% endfor %}
                {% endif %}
            {% endfor %}
        </div>

        {% if has_center %}
            <div class="span4">
                {% for blockList in blocks %}
                    {% if blockList is not empty %}
                        {% for block in blockList %}
                            {% if block.position is defined and block.position == 'center' %}
                                {{ sonata_block_render({ 'type': block.type, 'settings': block.settings}) }}
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}

        <div class="{% if has_center %}span4{% else %}span6{% endif %}">
            {% for blockList in blocks %}
                {% if blockList is not empty %}
                    {% for block in blockList %}

                       {% if block.position is defined and block.position == 'right' %}
                            {{ sonata_block_render({ 'type': block.type, 'settings': block.settings}) }}
                       {% endif %}

                    {% endfor %}
                {% endif %}
            {% endfor %}
        </div>
    </div>

    {{ sonata_block_render_event('sonata.admin.dashboard.bottom', { 'admin_pool': admin_pool }) }}

{% endblock %}
