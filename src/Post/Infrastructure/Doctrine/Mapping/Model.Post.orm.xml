<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Post\Domain\Model\Post" table="blog_post">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>
        <embedded name="content" class="App\Post\Domain\ValueObject\PostContent" />
        <field name="createdAt" type="datetime_immutable" column="created_at" />
        <field name="slug" type="string" column="slug" length="255" nullable="true"/>
        <field name="public" type="boolean" column="public" nullable="false">
            <options>
                <option name="default">0</option>
            </options>
        </field>

         <one-to-many field="tags" target-entity="App\Post\Domain\Model\Tag" mapped-by="post"
                     fetch="LAZY" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
    </entity>

</doctrine-mapping>
