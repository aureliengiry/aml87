<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Post\Domain\Model\Tag" table="blog_tag">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>
         <many-to-one field="post" target-entity="App\Post\Domain\Model\Post" fetch="LAZY"
                     inversed-by="tags">
            <join-column name="post_id" referenced-column-name="id"/>
        </many-to-one>

        <field name="label" type="string" column="label" length="255" />
        <field name="key" type="string" column="key" length="255" />
    </entity>

</doctrine-mapping>
