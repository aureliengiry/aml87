<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <title>{% block title %}{% endblock %} {{ site_name }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ block('title') }} {{ site_name }}">

    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js">
    </script>
    <![endif]-->

    <!-- Le styles -->
    <link rel="shortcut icon" href="{{ asset('bundles/amlweb/ico/aml_favicon.ico') }}"/>

    <link href="{{ asset('bundles/amlweb/css/bootstrap/bootstrap.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('build/global.css') }}" rel="stylesheet"/>



    {% block stylesheets %}{% endblock %}

    {% block headerJs %}{% endblock %}

    {{ render(controller('AmlWebBundle:Default:googleAnalytics')) }}
</head>
<body>
<div id="global">
    {# Header #}
    {{ include('_includes/header.html.twig') }}

    <section id="contenu">

        <!-- CONTENT HERE -->
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success flash-notice">
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-error flash-notice">
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('info') %}
            <div class="alert alert-info flash-notice">
                {{ flashMessage }}
            </div>
        {% endfor %}

        <div id="col-left" class="two-cols-content">
            {% block body %}{% endblock %}
        </div>

        <div id="col-right">
            <div class="side-bloc no-border">
                {% block columnRight %}

                    {# Next Concert #}
                    {{ render(controller('AmlEvenementsBundle:Agenda:nextConcert')) }}

                    {# Block Facebook #}
                    {{ include('blocs/facebook-page-plugin.html.twig') }}

                {% endblock %}
            </div>
        </div>
    </section>
    <div class="clearfooter"></div>

    {# Footer #}
    {{ include('_includes/footer.html.twig') }}
</div>

<script src="{{ asset('build/app.js') }}" type="text/javascript"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
