{% extends 'base.html.twig' %}

{% block title -%}
    Blog - {{ article.content.title }}
{%- endblock title %}

{% block body %}

    {# Breadcrumb #}
    {% include "_includes/breadcrumb.html.twig" %}

    <article class="blog-article">
        <h2>{{ article.content.title }}</h2>

        <div class="publi-info">
			<span>Publié le 
				<span class="date-article-block">{% if article.createdAt %}{{ article.createdAt|date('d/m/Y à H:i') }}{% endif %}</span>
			</span>
        </div>

        {% if article.logo %}
            <div class="blog-visuel">
                <a class="thumbnail" rel="prettyPhoto"
                   href="{{ asset(article.logo.webpath) | imagine_filter('modal_img') }}">
                    <img src="{{ asset(article.logo.webpath) | imagine_filter('blog_view') }}"
                         alt="" title="{{ article.logo.title }}"
                         class="imagecache imagecache-blog_view" width="588"/>
                </a>
            </div>
        {% endif %}

        {% if article.video %}
            <iframe id="ytplayer" type="text/html" width="640" height="360"
                    src="https://www.youtube.com/embed/{{ article.video.providerId }}?html5=1"
                    frameborder="0"
                    allowfullscreen="true">
            </iframe>
        {% endif %}

        <div class="article-description">{{ article.content.body|raw }}</div>

        {% if article.tags is not empty %}
            <span class="blog-tags">Mots clés : </span>
            {% for key,tag in article.tags %}
                {% if key > 0 %}, {% endif %}<a class="active" title="{{ tag.description }}"
                                                href="{{ path('blog',{'tag' : tag.systemName}) }}">{{ tag.name }}</a>
            {% endfor %}
        {% endif %}
    </article>

{% endblock body %}

{% block columnRight %}
    {{ render(controller('App\\Post\\Ui\\Controller\\BlogController::filters')) }}
{% endblock columnRight %}
