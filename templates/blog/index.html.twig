{% extends 'base.html.twig' %}

{% block title -%}
    Blog - Liste des articles
{%- endblock title %}

{% block body %}

    {# Breadcrumb #}
    {% include "_includes/breadcrumb.html.twig" %}

    <div class="contenu-page">

        {% if articles is not empty %}
            {% for article in articles %}

                {# articles #}
                <article class="blog-article{% if loop.first %} first{% endif %}{% if loop.last %} last{% endif %}">
                    {% include "blog/_includes/article.html.twig" %}
                </article>

            {% endfor %}

            {# Pagination #}
            {% include "blog/_includes/pagination.html.twig" %}

        {% else %}
            <h1>Blog</h1>
            <p>Aucun article de blog publi√©.</p>
        {% endif %}
    </div>

{% endblock body %}

{% block columnRight %}
    {{ render(controller('App\\Post\\Ui\\Controller\\BlogController::filters')) }}
{% endblock columnRight %}
