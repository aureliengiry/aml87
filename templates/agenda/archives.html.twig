{% extends 'base.html.twig' %}

{% block title -%}
    Archives
{%- endblock title %}

{% block body %}

    {# Breadcrumb #}
    {% include "_includes/breadcrumb.html.twig" %}

    <article class="contenu-page">

        <h1>Archives - {{ currentSeason.name }}</h1>

        <ul id="agenda-concerts-public">
            {% for event in entities %}
                <li class="event-item">
                    <span class="date">
                        {{ event.dateStart | date('d F Y') }} :
                    </span>

                    <h2>
                        <a href="{{ path('agenda_show_event', { 'slug': event.slug }) }}"
                           title="{{ event.title }}">{{ event.title }}</a>
                    </h2>
                </li>
            {% endfor %}
        </ul>

    </article>
{% endblock body %}

{% block columnRight %}

    {{ parent() }}

    {# Seasons list #}
    {% include "agenda/blocs/bloc_seasons.html.twig" %}

{% endblock columnRight %}
