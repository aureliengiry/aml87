{% extends 'base.html.twig' %}

{% block title -%}
    {{ entity.title }} - Agenda
{%- endblock title %}

{% block body %}
    {#<div id="col-left" class="two-cols-content evenement">#}

        {# Breadcrumb #}
        {% include "_includes/breadcrumb.html.twig" %}

        <article class="contenu-page">
            <h1>{{ entity.title }}</h1>

            {# Date #}
            {% if entity.dateStart %}
                <span class="date">{{ entity.dateStart | date('d F Y à H:m') }}</span>
            {% endif %}

            {# Affiche #}
            {% if entity.picture and entity.picture.webpath %}
                <div>
                    <a rel="prettyPhoto" href="{{ asset(entity.picture.webpath) | imagine_filter('modal_img') }}"
                       class="thumbnail">
                        <img data-src="holder.js/160x120" alt="{{ entity.picture.title }}"
                             src="{{ asset(entity.picture.webpath) | imagine_filter('evenement_view') }}"
                             title="{{ entity.picture.title }}"
                             class="imagecache imagecache-evenement_view" width="588"/>
                    </a>
                </div>
            {% endif %}

            <div><p>{{ entity.description|raw }}</p></div>
        </article>

        {# Liste vidéos liées #}
        {% include "agenda/blocs/bloc_videos.html.twig" %}

{% endblock body %}

{% block columnRight %}

    {# Liste articles liés #}
    {% include "agenda/blocs/bloc_articles.html.twig" %}

    {# Liste des partenaires de l'évènement #}
    {% include "agenda/blocs/bloc_partenaires.html.twig" %}

{% endblock columnRight %}
