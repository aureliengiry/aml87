{% extends 'base.html.twig' %}

{% block title -%}
    Discrographie - {{ album.title }}
{%- endblock title %}

{% block body %}

    {# Breadcrumb #}
    {% include "_includes/breadcrumb.html.twig" %}

    <article class="contenu-page">

        <div class="discographie-bloc-titre">
            <h2 class="discographie">{{ album.title }}</h2>
            <span class="disc-date-sortie">Date de sortie : {{ album.date|date('d-m-Y') }}</span>
        </div>

        <div class="disc-presentation">

            <div class="disc-pochette-list">
                {% if album.image is not empty %}
                <a rel="prettyPhoto" href="{{ asset(album.image.webpath) | imagine_filter('modal_img') }}">
                    <img src="{{ asset(album.image.webpath) | imagine_filter('discography_list') }}"
                         alt="{{ album.image.title }}" title="{{ album.image.title }}"
                         class="imagecache imagecache-pochette-album" width="180" height="160">
                </a>
                {% endif %}
            </div>

            <div class="disc-description-list">
                {{ album.description|raw }}
            </div>
        </div>

        {% if album.tracks is not empty %}
            <div class="disc-list-tracks">
                <h3>Composition du disque</h3>

                <table class="table table-condensed table-striped">
                    <thead>
                        <tr>
                            <th>NÂ°piste</th>
                            <th>Titre</th>
                            <th>Compositeur(s)</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for key,track in album.tracks %}
                        <tr>
                            <td>{{ track.number }}</td>
                            <td>{{ track.title }}</td>
                            <td>{{ track.composer }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}

    </article>

{% endblock body %}
